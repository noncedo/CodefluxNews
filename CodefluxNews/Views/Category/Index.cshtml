@*@model IPageList<CodefluxNews.Models.NewsCategory>*@
@model PagedList.IPagedList<CodefluxNews.Models.NewsCategory>
@using PagedList

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="text-center">Sub-Categories</h4>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Sub-Category Name")
        </th>
        <th>
            @Html.DisplayName("Category Name")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentCategory.ParentName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CategoryId }) |
                @*@Html.ActionLink("Details", "Details", new { id=item.CategoryId }) |*@
                @Html.ActionLink("Delete", "Delete", new { id = item.CategoryId }, new { onclick = "return confirm('Are you sure want to delete ?');" })
            </td>
        </tr>
    }

</table>
<br />
