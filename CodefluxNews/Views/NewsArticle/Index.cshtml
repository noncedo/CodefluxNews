
@model IEnumerable<CodefluxNews.Models.NewsArticle>
@*@model PagedList.IPagedList<CodefluxNews.Models.NewsArticle>
    @using PagedList*@

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="text-center">News Articles</h4>
<div class="container" style="padding-top:50px">

    @*<div class="col-md-auto">
        </div>*@
    <div class="col-md-2" style="padding-right:20px;">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table" id="table">
            <tr>
                <th>
                    @Html.DisplayName("Title")
                </th>
                <th>
                    @Html.DisplayName("Summary")
                </th>
                <th>
                    @Html.DisplayName("Picture")
                </th>
                <th>
                    @Html.DisplayName("Url")
                </th>
                <th>
                    @Html.DisplayName("News Provider")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Summary)
                        </td>


                        <td>
                            <img src="@item.Picture" width="200" height="100" />
                        </td>


                        <td>
                            <a href="@item.Url">@item.Url</a>
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.NewsProvider.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NewsCategory.CategoryName)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ArticleId }) |
                            @*@Html.ActionLink("Details", "Details", new { id=item.ArticleId }) |*@
                            @Html.ActionLink("Delete", "Delete", new { id = item.ArticleId }, new { onclick = "return confirm('Are you sure want to delete ?');" })
                        </td>
                    </tr>
                </tbody>
            }
        </table>
    </div>
</div>
@*</div>*@

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")


}
