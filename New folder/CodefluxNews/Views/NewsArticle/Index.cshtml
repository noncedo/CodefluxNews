@model IEnumerable<CodefluxNews.Models.NewsArticle>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">News Articles</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Summary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Url)
        </th>
        <th>
            @Html.DisplayName("News Provider")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Summary)
        </td>
        <td>
            <img alt="@item.Picture" src="@Url.Content(item.Picture)" width="200" height="100" />
        </td>
        <td>
            <a href="@item.Url">@item.Url</a>
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.NewsProvider.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NewsCategory.CategoryName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ArticleId }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.ArticleId }) |*@
            @Html.ActionLink("Delete", "Delete", new { id = item.ArticleId }, new { onclick = "return confirm('Are you sure want to delete ?');" })
        </td>
    </tr>
}

</table>
