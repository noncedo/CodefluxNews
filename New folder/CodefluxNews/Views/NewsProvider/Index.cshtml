@model IEnumerable<CodefluxNews.Models.NewsProvider>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">News Providers</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Name")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Url)
        </th>
        <th>
            @Html.DisplayName("Country Name")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <a href="@item.Url">@item.Url</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Country.CountryName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProviderId }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.ProviderId }) |*@
            @Html.ActionLink("Delete", "Delete", new { id = item.ProviderId },new{ onclick = "return confirm('Are you sure want to delete ?');" })
        </td>
    </tr>
}

</table>
